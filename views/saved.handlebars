

<div id="expand-box">
    <div class="wrapper">
        <article class="content">
            <div class="panel">
                <div id="handlebars-sandbox">
                    {{#if article}}
                    {{#each article}}
                    <div class="card mb-3" data-_id="{{this._id}}" id="media">
                        <a href="{{this.url}}">
                            <img src="{{this.picture}}" class="card-img-top" alt="..." id="article-pic">
                            <div class="card-body">
                                <h5 class="card-title">{{this.headline}}</h5>
                        </a>
                        <p class="card-text">{{this.summary}}</p>
                        <p class="card-text"><small class="text-muted">{{this.date}}</small></p>
                        <p> <a href="{{this.url}}">Read More</a>
                            <span class="buttons">

                                <button id="comment-modal" class="small-buttons" data-toggle="modal"
                                    data-target="#modalContactForm" data-id={{this._id}}
                                    data-articleId={{_id}}>Comments</button> |

                                {{!-- <button data-articleId={{_id}} class="small-buttons unsave-btn">Remove from
                                    saved</button> | --}}

                                <button id="delete-article" class="small-buttons">Delete Article</button>
                            </span>
                        </p>



<!---------------------- Modal ------------------------>

                        <div class="modal fade modalNote" id="modalContactForm" tabindex="-1" role="dialog"
                            aria-labelledby="myModalLabel" aria-hidden="true" data-articleId="">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header text-center">
                                        <h5 class="modal-title w-100 font-weight-bold">Comment for Article: <span
                                                id="headline-color"></span></h5>


                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>

                                    <div class="modal-body mx-3">
                                        <div class="modal-body" id="notes">
                                            <p>Your current comments: </p>
                                            {{#each this.note}}
                                            <ul id="notes-list">
                                                {{!-- <li><button type="button" class="delete-note" aria-label="Close"> 
                                            <span aria-hidden="true">&times;</span>
                                        </button> {{this.note}}</li> --}}
                                            </ul>
                                            {{/each}}
                                        </div>

                                        <div class="md-form">
                                            <i class="fas fa-pencil prefix grey-text"></i>
                                            <label data-error="wrong" data-success="right" for="form8">Leave a
                                                comment</label>
                                            <textarea type="text" id="form8" class="md-textarea form-control"
                                                rows="4"></textarea>

                                        </div>

                                    </div>
                                    <div class="modal-footer d-flex justify-content-center">
                                        <div class="btn btn-secondary" id="save-comment" data-toggle="modal"
                                            data-target="#modalContactForm" data-id={{this._id}}>Submit</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                {{/each}}
                {{else}}
                <div class="message"> There are no saved artices, go back to the home page to save some articles!
                </div>
                {{/if}}
            </div>
        </article>
    </div>
</div>